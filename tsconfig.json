{
	"extends": "@onmoon/tsconfigs/node-module",
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"declaration": true,
		"removeComments": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": ".build",
		"lib": [
			"esnext"
		]
	},
	"include": [
		"src/**/*.ts"
	]
}
